<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if(message) { %>
        <div
          class="alert alert-dismissible fade show alert - <%= message.type %>"
          role="alert"
        >
          <button
            class="btn-close"
            type="button"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>
          <strong> <%= message.message %></strong>
        </div>
        <% } %>
      <div class="table-responsive">
        <% if (users != "") { %>
          <table class="table table-striped text-center my-3">
            <thead>
              <tr class="table-dark">
                <th>ID</th>
                <!-- <th>Image</th> -->
                <th>Name</th>
                <th>Email</th>
                <!-- <th scope="col">Password</th> -->
                <th>Phone</th>
                <th>Address</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>

              <!-- <tr>
                <th scope="row">1</th>
