<%- include('layout/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <h1> Product Page Content </h1>
            <% if(message) { %>
                <div
                  class="alert alert-dismissible fade show alert - <%= message.type %>"
                  role="alert"
                >
                  <button
                    class="btn-close"
                    type="button"
                    data-bs-dismiss="alert"
                    aria-label="Close"
                  ></button>
                  <strong> <%= message.message %></strong>
                </div> 
                <% } %>

            <div class="table-responsive">

                <% if (product != "") { %>
                    <table class="table table-striped text-center my-5">
                        <thead>
                            <tr class="table-dark">
                                <th> ID </th>
                                <th> Product Name </th>
                                <th> Product Price </th>
                                <th> Product Description </th>
                                <th> Category </th>
                                <th> Action </th>
                            </tr>
                        </thead>
                        <tbody>
                            
                            <% product.forEach((row, index) => { %>
                                <tr class = "align-middle">
                                  <td><%= index %></td>
                                  <td><%= row.prodName %></td>
                                  <td><%= row.prodPrice %></td>
                                  <td><%= row.prodDescription %></td>
                                  <td><%= row.category%></td>
                                  <td>
                                    <a href="/editProduct/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                
                                    <a href="/deleteProduct/<%= row._id %>" class="text-danger"
                                    ><i class="fa-regular fa-trash-can fa-lg mx-1"></i
                                    ></a>
                                  </td>
                                </tr>
                              <% }) %>

                        </tbody>
                    </table>
                    <% } else { %>
                        <h1 class="text-center text-secondary mt-5"> No Product Found :) </h1>
                        <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>