<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">

            <% if(message) { %>
                <div
                  class="alert alert-dismissible fade show alert - <%= message.type %>"
                  role="alert"
                >
                  <button
                    class="btn-close"
                    type="button"
                    data-bs-dismiss="alert"
                    aria-label="Close"
                  ></button>
                  <strong> <%= message.message %></strong>
                </div>
                <% } %>

            <div class="table-responsive">

                <% if (users != "") { %>
                    <!-- Dynamic Data -->
                    <table class="table table-striped text-center my-5">
                        <thead>
                            <tr class="table-dark">
                                <th> ID </th>
                                <th> Name </th>
                                <th> Email </th>
                                <th> Age </th>
                                <th> Phone </th>
                                <th> Address </th>
                                <th> Action </th>
                            </tr>
                        </thead>
                        <tbody>
                            
                            <% users.forEach((row, index) => { %>
                                <tr class = "align-middle">
                                  <td><%= index %></td>
                                  <td><%= row.name %></td>
                                  <td><%= row.email %></td>
                                  <td><%= row.age %></td>
                                  <td><%= row.phone %></td>
                                  <td><%= row.address %></td>
                                  <td>
                                    <a href="/editUser/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                
                                    <a href="/deleteUser/<%= row._id %>" class="text-danger"
                                    ><i class="fa-regular fa-trash-can fa-lg mx-1"></i
                                    ></a>
                                  </td>
                                </tr>
                              <% }) %>

                        </tbody>
                    </table>
                    <% } else { %>
                        <h1 class="text-center text-secondary mt-5"> No USERS Found :) </h1>
                        <% } %>

