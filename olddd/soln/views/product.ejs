<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PRODUCT PAGE</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <!-- Product Card -->
    <div class="container-fluid">
      <!-- navbar -->
      <ul class="nav nav-pills justify-content-center">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="">Product</a>
        </li>
        <li class="nav-item">
          <a
            class="nav-link"
            href="http://localhost:3000/category/displayCategory"
            >Category</a
          >
        </li>
      </ul>
      <br>
      <!-- navbar ended -->
       
        <div class="col">
          <% product.forEach(function(item) { %>
          <div class="card h-100">
            <!-- <img src="..." class="card-img-top" alt="..."> -->
            <section>
              <div class="card-body">
                <p class="card-text"><b><u> Product ID is </u> :- <%= item.id %> </b></p>
                <p class="card-text"><b><u> Product Name is </u> :- <%= item.name %> </b></p>
                <p class="card-text"><b><u><i> Product Category is by Category ID </u> :- <%= item.category %> </i></b></p>
                <p class="card-text">Product Price is :- <%= item.price %></p>
                <p class="card-text">Product Description is :- <%= item.description %></p>
              </div>
            </section>
          </div>
          <% }); %>
        </div>
  </body>
</html>
